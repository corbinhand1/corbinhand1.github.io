{
  "name": "nebula-showtime-site",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && cp -r dist/* . && git add . && git commit -m 'Deploy: $(date)' && git push origin main",
    "clean": "rm -rf dist node_modules/.vite",
    "fresh": "npm run clean && npm install && npm run dev",
    "type-check": "tsc --noEmit",
    "lint": "echo 'No linter configured'",
    "format": "echo 'No formatter configured'"
  },
  "dependencies": {
    "canvas-confetti": "^1.6.0",
    "framer-motion": "^10.12.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^24.7.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.16",
    "tailwindcss": "^3.2.1",
    "terser": "^5.44.0",
    "typescript": "^4.9.3",
    "vite": "^4.0.0"
  }
}
